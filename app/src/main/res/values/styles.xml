<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowBackground">@color/color_606060</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="FullScreenAppTheme" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/color_ffffff</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/color_68DBEA</item>
        <item name="android:tint">@color/color_68DBEA</item>
        <!-- <item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TextViewCustomerTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/color_e5e5e5</item>
        <item name="android:textSize">@dimen/_18dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LocationTextValueTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/color_000000</item>
        <item name="android:textColorHint">@color/color_a9a9a9</item>
        <item name="colorControlNormal">@color/color_a9a9a9</item>
        <item name="colorControlActivated">@color/color_a9a9a9</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@null</item>
        <item name="android:textSize" tools:ignore="SpUsage">@dimen/_17dp</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:layout_marginEnd">@dimen/_16dp</item>
        <item name="android:layout_marginTop">@dimen/_6dp</item>
    </style>

    <style name="SignUpSignInHeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:textSize" tools:ignore="SpUsage">@dimen/_20dp</item>
        <item name="android:layout_marginTop">@dimen/_16dp</item>
        <item name="android:layout_marginStart">@dimen/_15dp</item>
        <item name="android:layout_marginEnd">@dimen/_15dp</item>
    </style>

    <style name="SignUpSignInDescStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:textSize" tools:ignore="SpUsage">@dimen/_14dp</item>
    </style>

    <style name="UserTypeSelectedStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize" tools:ignore="SpUsage">@dimen/_16dp</item>
    </style>

    <style name="UserTypeUnSelectedStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize" tools:ignore="SpUsage">@dimen/_16dp</item>
    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/color_a9a9a9</item>
        <!-- small text at blur-->
        <item name="colorControlNormal">@color/color_a9a9a9</item>
        <!-- bottom line at blur-->
        <item name="colorControlActivated">@color/color_a9a9a9</item>
        <!-- small text and bottom line at focus-->
    </style>

    <style name="CustomProgressBarStyle" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>

    <style name="common_alert_dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/colorPrimary</item>
        <!--<item name="android:textSize">@dimen/_16dp</item>-->
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/color_ffffff</item>
    </style>

    <style name="CustomSwitchStyle" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>


    <style name="ValidationErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/error_text_color</item>
        <item name="android:textSize">@dimen/_12dp</item>
        <item name="android:textColorHint">@color/color_a9a9a9</item>
    </style>

    <!--do not add layout_gravity in card as is cause scroll problem in signup process-->
    <style name="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_8dp</item>
        <item name="android:layout_marginStart">@dimen/_15dp</item>
        <item name="android:layout_marginEnd">@dimen/_15dp</item>
        <item name="android:layout_marginBottom">@dimen/_8dp</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:divider">@android:color/transparent</item>
    </style>


    <style name="DialogTheme" parent="@style/Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="LoginSignUPBtnStyleBlack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize" tools:ignore="SpUsage">@dimen/_15dp</item>
    </style>


    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:dropDownVerticalOffset">24dp</item>
        <item name="overlapAnchor">false</item>
        <!--Other customizations-->
    </style>


    <style name="SearchViewTheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">@dimen/_16dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:editTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/color_9e9e9e</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>


    <style name="SignUpEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:textColorHint">@color/color_a3a3a3</item>
        <item name="android:textSize" tools:ignore="SpUsage">@dimen/_16dp</item>
        <item name="android:backgroundTint">@color/color_ececec</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/_15dp</item>
        <item name="android:paddingEnd">@dimen/_10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:importantForAutofill" tools:ignore="NewApi">no</item>
    </style>

    <style name="SignUpEditTextHint" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/color_a3a3a3</item>
        <!-- small text at blur-->
        <item name="colorControlNormal">@color/color_ececec</item>
        <!-- bottom line at blur-->
        <item name="colorControlActivated">@color/color_ececec</item>
        <!-- small text and bottom line at focus-->
        <item name="android:colorControlHighlight">@color/error_text_color</item>
    </style>

    <style name="BusinessTypeSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:dropDownVerticalOffset">@dimen/_60dp</item>
        <item name="overlapAnchor">true</item>
        <!--Other customizations-->
    </style>

</resources>